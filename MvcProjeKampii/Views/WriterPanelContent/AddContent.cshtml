@model EntitiyLayer.Concrete.Content
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h3>İçerik Ekleme Sayafası</h3>
<br />

@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <div class="form-group">

        <input  type="hidden" name="HeadingId"value="@ViewBag.d"/>
        @Html.TextAreaFor(x => x.ContentValue,7,30, new { PlaceHolder = "İçeriğinizi Yazın", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ContentValue)
        <br />
        <button class="btn btn-outline-primary">Ekle</button>
    </div>
}




