@model PagedList.IPagedList<EntitiyLayer.Concrete.Category>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@*Sweat Alert Sayesinde Sildik*@
<h2>Kategori Listesi</h2>
<br />
<table class="table table-bordered">

    <tr>

        <th>#</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>İşlemler</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>
                <button class="btn btn-outline-danger" onclick="deletecategory(@item.CategoryId)">Sil </button>
                <a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-outline-info">Güncelle</a>
                <a href="/AdminCategory//@item.CategoryId" class="btn btn-outline-primary">Başlıklar</a>
            </td>
        </tr>

    }
</table>
@Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    {
        "page-link"
    }@*Page-link css.yani daha güzel görünsün diye yaptık.*@
})
@*PagedList Modele Bağlı Olarak Çalışacak.p(controller verdiğimiz parametre p idi.
    her defasında p değeri oluşturarak Index git *@
<a href="/AdminCategory/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>

@*Burası Silmek İstediğinize Emin Misiniz Diye Sorulacağı Yer*@
<script>
    function deletecategory(id) {

        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {//Sil Tıklanıysa Ne Yapsın.

                window.location.href = "/AdminCategory/DeleteCategory/" + id;
            }
        });

    }
</script>
@*Çalışması İçin AdminLayoutIdnexine https://sweetalert2.github.io/ Web Sitesinden yolunu verdik--> <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>*@


