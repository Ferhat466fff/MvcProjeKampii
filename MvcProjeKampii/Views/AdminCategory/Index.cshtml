@model List<EntitiyLayer.Concrete.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}

<br />
<table class="table table-bordered">

    <tr>

        <th>#</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>İşlemler</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>
                <a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a>
                <a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-outline-info">Güncelle</a>
                <a href="/AdminCategory//@item.CategoryId" class="btn btn-outline-primary">Başlıklar</a>
            </td>
        </tr>

    }
</table>
<a href="/AdminCategory/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
